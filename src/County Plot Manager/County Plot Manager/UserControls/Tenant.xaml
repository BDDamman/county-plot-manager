<UserControl x:Class="PlotManager.UI.UserControls.Tenant"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlotManager.UI.UserControls"
             mc:Ignorable="d">

		<StackPanel Margin="3,0">
			<TextBlock Text="{Binding Path=Name.FirstName, FallbackValue='Ida'}"
									 Style="{StaticResource Text_Black}"/>
			<TextBlock Text="{Binding Path=Name.LastName,FallbackValue='Ross'}"
									 Style="{StaticResource Text_Black}"/>
		</StackPanel>

</UserControl>
