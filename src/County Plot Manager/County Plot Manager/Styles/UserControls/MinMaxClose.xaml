<UserControl x:Class="PlotManager.UI.Styles.UserControls.MinMaxClose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlotManager.UI.Styles.UserControls"
 						 Loaded="OnUserControlLoaded"
             mc:Ignorable="d" >

	<StackPanel Orientation="Horizontal">
		<Button x:Name="button_Min" 
						Style="{StaticResource ButtonMin}"
						KeyboardNavigation.IsTabStop="False"
						Click="Minimize"/>
		<Button x:Name="button_Max" 
						Style="{StaticResource ButtonMax}"
						KeyboardNavigation.IsTabStop="False"
						Click="MaxOrRestore"/>
		<Button x:Name="button_Restore" 
						Style="{StaticResource ButtonRestore}"
						KeyboardNavigation.IsTabStop="False"
						Click="MaxOrRestore"/>
		<Button x:Name="button_Close" 
						Style="{StaticResource ButtonClose}"
						KeyboardNavigation.IsTabStop="False"
						Click="CloseWindow"/>
	</StackPanel>


</UserControl>
